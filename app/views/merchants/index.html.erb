<h3>All Merchants</h3>
<table border='1'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Status</th>
    <th>Transaction Amount</th>
    <th>Transaction Count</th>
    <th>Action</th>    
  </tr>
  <% @merchants.each do |m| %>
    <% present(m) do |merchant| %>
      <tr>
        <td><%= merchant.name %></td>
        <td><%= merchant.email %></td>
        <td><%= merchant.status %></td>
        <td align="right"><%= merchant.transaction_amount %></td>
        <td align="center"><%= link_to merchant.transactions_count, merchant_transactions_path(merchant) %></td>
        <td><%= link_to 'View', merchant_path(merchant) %> |
            <%= link_to 'Edit', edit_merchant_path(merchant) %> |
            <%= link_to 'Destroy', merchant_path(merchant),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>